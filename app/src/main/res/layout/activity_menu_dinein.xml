<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.android.nurcahyadi_1202154156_modul2.MenuDinein">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Customer :"
        android:layout_gravity="center"
        android:textSize="25sp"
        />
    
    <EditText
        android:id="@+id/namapelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Meja :"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"/>

        <Spinner
            android:id="@+id/spdinein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/nomeja"
            android:layout_marginTop="30dp"
            >


        </Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/btnpilihdinein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="pilih pesanan"/>
</LinearLayout>
